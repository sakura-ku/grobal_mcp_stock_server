# サーバー設定
PORT=3000                          # アプリケーションのポート番号
HOST=localhost                     # アプリケーションのホスト名

# 外部株価API設定
STOCK_API_KEY=your_api_key_here    # 外部株価APIの認証キー
STOCK_API_URL=https://api.example.com/stocks  # 外部株価APIのベースURL
API_TIMEOUT=5000                   # API呼び出しのタイムアウト時間(ミリ秒)

# ログ設定
LOG_LEVEL=info                     # ログレベル(debug, info, warn, error)

# キャッシュ設定
ENABLE_CACHE=true                  # キャッシュ機能の有効化
CACHE_TTL=300                      # キャッシュの有効期間(秒)

# GitHub Packages認証
# NPM_TOKEN - システム環境変数に設定してください # GitHub Personal Access Token 

# OpenAI API設定
# OPENAI_API_KEY - システム環境変数に設定してください # OpenAI APIキー
OPENAI_TIMEOUT=30000               # OpenAI APIのタイムアウト時間(ミリ秒)
OPENAI_MAX_RETRIES=3               # OpenAI APIの最大リトライ回数 