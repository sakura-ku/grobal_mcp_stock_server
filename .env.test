# テスト環境設定
NODE_ENV=test
PORT=3001

# テスト用データベース接続設定
DATABASE_URL=postgres://postgres:postgres@localhost:5432/stock_test_db

# テスト用APIキー
OPENAI_API_KEY=sk-test-dummy-key

# テスト時のログレベル
LOG_LEVEL=error

# メール送信をモック
MAIL_DRIVER=log

# テスト用Redis接続
REDIS_URL=redis://localhost:6379/1

# JWT設定
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=1d

# テスト用外部APIエンドポイント
# 実際のAPIではなくモックサーバーを使用
STOCK_API_BASE_URL=http://localhost:9001/api/v1
MARKET_DATA_API_URL=http://localhost:9002/data

# テスト実行設定
TEST_TIMEOUT=10000 